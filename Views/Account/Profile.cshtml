@model RecipeManager.Models.User

@{
    ViewData["Title"] = "My Profile";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <div class="d-flex align-items-center mb-4">
                        @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                        {
                            <img src="@Model.ProfilePictureUrl" alt="Profile" class="rounded-circle me-3" style="width: 80px; height: 80px;">
                        }
                        <div>
                            <h2>@Model.DisplayName</h2>
                            <p class="text-muted mb-0">@Model.Email</p>
                            <small class="text-muted">Member since @Model.DateJoined.ToString("MMMM dd, yyyy")</small>
                        </div>
                    </div>

                    <hr>

                    <h4>Newsletter Subscription</h4>
                    <form asp-action="UpdateNewsletter" method="post">
                        <div class="form-check form-switch mb-3">
                            <input class="form-check-input" type="checkbox" id="newsletter"
                                   name="subscribe" value="true"
                                   @(Model.IsNewsletterSubscribed ? "checked" : "")
                                   onchange="this.form.submit()">
                            <label class="form-check-label" for="newsletter">
                                Receive weekly recipe recommendations
                            </label>
                        </div>
                    </form>

                    <hr>

                    <form asp-action="Logout" method="post">
                        <button type="submit" class="btn btn-outline-danger">Sign Out</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>