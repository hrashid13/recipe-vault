@{
    ViewData["Title"] = "Sign In";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg">
                <div class="card-body p-5 text-center">
                    <h2 class="mb-4">Welcome to RecipesVault</h2>
                    <p class="text-muted mb-4">Sign in to save your favorite recipes and get weekly recommendations</p>

                    <form asp-action="GoogleLogin" method="get">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div class="form-check mb-4">
                            <input class="form-check-input" type="checkbox" name="newsletter" id="newsletter" value="true">
                            <label class="form-check-label" for="newsletter">
                                <strong>Yes!</strong> Send me the Recipe of the Week newsletter
                            </label>
                        </div>

                        <button type="submit" class="btn btn-light btn-lg border">
                            <img src="https://www.google.com/favicon.ico" alt="Google" style="width: 20px; margin-right: 10px;">
                            Sign in with Google
                        </button>
                    </form>

                    <p class="mt-4 text-muted small">
                        By signing in, you agree to our Terms of Service and Privacy Policy
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>