@model RecipeManager.Models.Ingredient

@{
    ViewData["Title"] = "Create Ingredient";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="create-container">
    <div class="page-header">
        <h1>Create New Ingredient</h1>
        <p class="subtitle">Add a new ingredient to your library</p>
    </div>

    <div class="form-card">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            
            <div class="form-group">
                <label asp-for="IngredientName" class="form-label">
                    <span class="icon"></span>
                    Ingredient Name
                </label>
                <input asp-for="IngredientName" class="form-input" placeholder="e.g., Tomato, Garlic, Basil..." />
                <span asp-validation-for="IngredientName" class="validation-message"></span>
            </div>

            <div class="form-group">
                <label asp-for="CategoryID" class="form-label">
                    <span class="icon"></span>
                    Category
                </label>
                <select asp-for="CategoryID" class="form-select">
                    <option value="">-- Select Category --</option>
                    @if (ViewBag.Categories != null)
                    {
                        @foreach (var category in ViewBag.Categories)
                        {
                            <option value="@category.CategoryID">@category.CategoryName</option>
                        }
                    }
                </select>
                <span asp-validation-for="CategoryID" class="validation-message"></span>
            </div>

            <div class="button-group">
                <button type="submit" class="btn-submit">
                    ✓ Create Ingredient
                </button>
                <a asp-action="Index" class="btn-cancel">
                    ← Back to List
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    * {
        font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .create-container {
        max-width: 800px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 48px;
    }

    .page-header h1 {
        font-size: 2.5em;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 12px;
        letter-spacing: -0.5px;
    }

    .subtitle {
        font-size: 1.1em;
        color: #6b7280;
        font-weight: 500;
    }

    .form-card {
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .form-group {
        margin-bottom: 24px;
    }

    .form-label {
        display: flex;
        align-items: center;
        gap: 8px;
        font-size: 0.95em;
        font-weight: 600;
        color: #4b5563;
        margin-bottom: 8px;
    }

    .icon {
        font-size: 1.2em;
    }

    .form-input,
    .form-select {
        width: 100%;
        padding: 14px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 1em;
        font-weight: 500;
        color: #1f2937;
        background: #fafafa;
        transition: all 0.2s;
    }

    .form-input:hover,
    .form-select:hover {
        border-color: #d4521e;
        background: white;
    }

    .form-input:focus,
    .form-select:focus {
        outline: none;
        border-color: #d4521e;
        box-shadow: 0 0 0 4px rgba(212, 82, 30, 0.1);
        background: white;
    }

    .form-input::placeholder {
        color: #9ca3af;
    }

    .form-select {
        cursor: pointer;
    }

    .validation-message {
        display: block;
        color: #dc2626;
        font-size: 0.875em;
        margin-top: 6px;
        font-weight: 500;
    }

    .alert {
        padding: 16px;
        border-radius: 12px;
        margin-bottom: 24px;
        font-weight: 500;
    }

    .alert-danger {
        background: #fee2e2;
        color: #991b1b;
        border: 2px solid #fecaca;
    }

    .button-group {
        display: flex;
        gap: 12px;
        margin-top: 32px;
        flex-wrap: wrap;
    }

    .btn-submit {
        flex: 1;
        padding: 14px 28px;
        background: linear-gradient(135deg, #d4521e 0%, #e8743b 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1em;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(212, 82, 30, 0.3);
        min-width: 180px;
    }

    .btn-submit:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(212, 82, 30, 0.4);
    }

    .btn-cancel {
        flex: 1;
        padding: 14px 28px;
        background: #f3f4f6;
        color: #4b5563;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-weight: 600;
        font-size: 1em;
        text-decoration: none;
        text-align: center;
        transition: all 0.2s;
        min-width: 180px;
        display: inline-block;
    }

    .btn-cancel:hover {
        background: #e5e7eb;
        color: #1f2937;
        transform: translateY(-2px);
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 2em;
        }

        .form-card {
            padding: 24px;
        }

        .button-group {
            flex-direction: column;
        }

        .btn-submit,
        .btn-cancel {
            width: 100%;
        }
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
