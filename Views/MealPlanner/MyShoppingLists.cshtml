@model IEnumerable<RecipeManager.Models.ShoppingList>
@{
    ViewData["Title"] = "My Shopping Lists";
}

<div class="container my-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>My Shopping Lists</h2>
            <p class="text-muted">View and manage your shopping list history</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="WeeklyPlan" class="btn btn-primary">
                Create New Meal Plan
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <h5>No Shopping Lists Yet</h5>
                    <p>You haven't created any shopping lists yet. Start by planning your meals for the week!</p>
                    <a asp-action="WeeklyPlan" class="btn btn-primary">
                        Plan Your Meals
                    </a>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var list in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">@list.ListName</h5>
                            <p class="card-text text-muted">
                                <small>
                                    <i class="bi bi-calendar3"></i> 
                                    @list.StartDate.ToString("MMM dd") - @list.EndDate.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-clock"></i> 
                                    Created @list.DateCreated.ToString("MMM dd, yyyy")
                                </small>
                            </p>
                            
                            @if (list.IsCompleted)
                            {
                                <span class="badge bg-success mb-2">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark mb-2">In Progress</span>
                            }
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="d-flex justify-content-between gap-2">
                                <a asp-action="ViewShoppingList" asp-route-id="@list.ShoppingListID" 
                                   class="btn btn-sm btn-primary flex-grow-1">
                                    View List
                                </a>
                                <form asp-action="DeleteShoppingList" method="post" class="flex-shrink-0"
                                      onsubmit="return confirm('Are you sure you want to delete this shopping list?');">
                                    <input type="hidden" name="id" value="@list.ShoppingListID" />
                                    <button type="submit" class="btn btn-sm btn-danger" style="min-width: 70px;">
                                        Delete
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
