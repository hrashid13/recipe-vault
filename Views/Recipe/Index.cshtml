@model IEnumerable<RecipeManager.Models.Recipe>

@{
    ViewData["Title"] = "Recipes";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">

<div class="recipes-container">
    <div class="page-header">
        <h1>Recipe Collection</h1>
        <p class="subtitle">Discover delicious recipes from our curated database</p>
    </div>

    <div class="filters-section">
        <form method="get" asp-action="Index" class="filter-form">
            <div class="filter-group">
                <label for="searchString">
                    <span class="icon"></span>
                    Search
                </label>
                <input type="text" name="searchString" id="searchString" class="filter-input" 
                       placeholder="Search recipes..." value="@ViewBag.CurrentSearch">
            </div>

            <div class="filter-group">
                <label for="sortOrder">
                    <span class="icon">â‡…</span>
                    Sort By
                </label>
                <select name="sortOrder" id="sortOrder" class="filter-select" onchange="this.form.submit()">
                    <option value="" selected="@(string.IsNullOrEmpty(ViewBag.CurrentSort))">A-Z (Default)</option>
                    <option value="name_desc" selected="@(ViewBag.CurrentSort == "name_desc")">Z-A</option>
                    <option value="date_asc" selected="@(ViewBag.CurrentSort == "date_asc")">Oldest First</option>
                    <option value="date_desc" selected="@(ViewBag.CurrentSort == "date_desc")">Newest First</option>
                </select>
            </div>

            <div class="filter-group">
                <label for="cuisineFilter">
                    <span class="icon"></span>
                    Cuisine
                </label>
                <select name="cuisineFilter" id="cuisineFilter" class="filter-select" onchange="this.form.submit()">
                    <option value="">All Cuisines</option>
                    @if (ViewBag.Cuisines != null)
                    {
                        @foreach (var cuisine in ViewBag.Cuisines)
                        {
                            <option value="@cuisine.CuisineID" selected="@(ViewBag.CurrentCuisine == cuisine.CuisineID)">
                                @cuisine.CuisineType
                            </option>
                        }
                    }
                </select>
            </div>

            <button type="submit" class="btn-search">Search</button>

            @if (!string.IsNullOrEmpty(ViewBag.CurrentSort) || ViewBag.CurrentCuisine != null || !string.IsNullOrEmpty(ViewBag.CurrentSearch))
            {
                <a asp-action="Index" class="clear-filters">Clear All</a>
            }
        </form>

        <a asp-action="Create" class="btn-create">+ Add New Recipe</a>
    </div>

    @if (Model.Any())
    {
        <div class="recipe-grid">
            @foreach (var recipe in Model)
            {
                <div class="recipe-card">
                    <a asp-action="Details" asp-route-id="@recipe.RecipeID" class="card-link">
                        <div class="card-header">
                            <h3 class="recipe-name">@recipe.RecipeName</h3>
                            @if (recipe.Cuisine != null)
                            {
                                <span class="cuisine-badge">@recipe.Cuisine.CuisineType</span>
                            }
                        </div>

                        <p class="recipe-description">
                            @(string.IsNullOrEmpty(recipe.Description) ? "No description available" : recipe.Description)
                        </p>

                        <div class="recipe-meta">
                            <div class="meta-item">
                                <span class="meta-icon"></span>
                                <div class="meta-content">
                                    <span class="meta-label">Prep</span>
                                    <span class="meta-value">@recipe.PrepTime min</span>
                                </div>
                            </div>

                            <div class="meta-item">
                                <span class="meta-icon"></span>
                                <div class="meta-content">
                                    <span class="meta-label">Cook</span>
                                    <span class="meta-value">@recipe.CookTime min</span>
                                </div>
                            </div>

                            <div class="meta-item">
                                <span class="meta-icon"></span>
                                <div class="meta-content">
                                    <span class="meta-label">Serves</span>
                                    <span class="meta-value">@recipe.Servings</span>
                                </div>
                            </div>

                            <div class="meta-item">
                                <span class="meta-icon"></span>
                                <div class="meta-content">
                                    <span class="meta-label">Level</span>
                                    <span class="meta-value">@(recipe.DifficultyLevel ?? "N/A")</span>
                                </div>
                            </div>
                        </div>
                    </a>
                    
                    <div class="card-actions">
                        <partial name="_SaveRecipeButton" model="recipe.RecipeID" />
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-state">
            <div class="empty-icon"></div>
            <h3>No recipes found</h3>
            <p>Try adjusting your filters or add a new recipe to get started!</p>
            <a asp-action="Create" class="btn-create">+ Add Your First Recipe</a>
        </div>
    }
</div>

<style>
    * {
        font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    .recipes-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 40px 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 48px;
    }

    .page-header h1 {
        font-size: 3em;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 12px;
        letter-spacing: -0.5px;
    }

    .subtitle {
        font-size: 1.2em;
        color: #6b7280;
        font-weight: 500;
    }

    .filters-section {
        background: white;
        border-radius: 16px;
        padding: 24px;
        margin-bottom: 32px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        display: flex;
        gap: 16px;
        align-items: flex-end;
        flex-wrap: wrap;
    }

    .filter-form {
        display: flex;
        gap: 16px;
        flex: 1;
        flex-wrap: wrap;
    }

    .filter-group {
        display: flex;
        flex-direction: column;
        gap: 8px;
        min-width: 200px;
    }

    .filter-group label {
        font-size: 0.9em;
        font-weight: 600;
        color: #4b5563;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .icon {
        font-size: 1em;
    }

    .filter-input {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95em;
        font-weight: 500;
        color: #1f2937;
        background: #fafafa;
        transition: all 0.2s;
    }

    .filter-input:hover {
        border-color: #d4521e;
        background: white;
    }

    .filter-input:focus {
        outline: none;
        border-color: #d4521e;
        box-shadow: 0 0 0 4px rgba(212, 82, 30, 0.1);
        background: white;
    }

    .filter-input::placeholder {
        color: #9ca3af;
    }

    .filter-select {
        padding: 12px 16px;
        border: 2px solid #e5e7eb;
        border-radius: 12px;
        font-size: 0.95em;
        font-weight: 500;
        color: #1f2937;
        background: #fafafa;
        cursor: pointer;
        transition: all 0.2s;
    }

    .filter-select:hover {
        border-color: #d4521e;
        background: white;
    }

    .filter-select:focus {
        outline: none;
        border-color: #d4521e;
        box-shadow: 0 0 0 4px rgba(212, 82, 30, 0.1);
    }

    .btn-search {
        padding: 12px 24px;
        background: linear-gradient(135deg, #2563eb 0%, #3b82f6 100%);
        color: white;
        border: none;
        border-radius: 12px;
        font-weight: 600;
        font-size: 0.95em;
        cursor: pointer;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(37, 99, 235, 0.3);
        white-space: nowrap;
        height: fit-content;
        align-self: flex-end;
    }

    .btn-search:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(37, 99, 235, 0.4);
    }

    .clear-filters {
        padding: 12px 20px;
        background: #fee;
        color: #dc2626;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.9em;
        transition: all 0.2s;
        height: fit-content;
        align-self: flex-end;
    }

    .clear-filters:hover {
        background: #fecaca;
        transform: translateY(-2px);
    }

    .btn-create {
        padding: 12px 24px;
        background: linear-gradient(135deg, #d4521e 0%, #e8743b 100%);
        color: white;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 0.95em;
        transition: all 0.2s;
        box-shadow: 0 4px 12px rgba(212, 82, 30, 0.3);
        white-space: nowrap;
        height: fit-content;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 16px rgba(212, 82, 30, 0.4);
        color: white;
    }

    .recipe-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr) !important;
        gap: 24px;
        margin-bottom: 40px;
    }

    .recipe-card {
        background: white;
        border-radius: 16px;
        padding: 24px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        flex-direction: column;
        border: 2px solid transparent;
    }

    .recipe-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 24px rgba(0, 0, 0, 0.12);
        border-color: #d4521e;
    }

    .card-link {
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        gap: 16px;
        flex: 1;
    }

    .card-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        gap: 12px;
    }

    .recipe-name {
        font-size: 1.4em;
        font-weight: 700;
        color: #1a1a2e;
        margin: 0;
        line-height: 1.3;
        flex: 1;
    }

    .cuisine-badge {
        background: linear-gradient(135deg, #d4521e 0%, #e8743b 100%);
        color: white;
        padding: 6px 12px;
        border-radius: 8px;
        font-size: 0.75em;
        font-weight: 600;
        white-space: nowrap;
        letter-spacing: 0.3px;
    }

    .recipe-description {
        color: #6b7280;
        font-size: 0.95em;
        line-height: 1.6;
        margin: 0;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        min-height: 3em;
    }

    .recipe-meta {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 12px;
        padding-top: 12px;
        border-top: 2px solid #f3f4f6;
    }

    .meta-item {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .meta-icon {
        font-size: 1.2em;
    }

    .meta-content {
        display: flex;
        flex-direction: column;
        gap: 2px;
    }

    .meta-label {
        font-size: 0.75em;
        color: #9ca3af;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .meta-value {
        font-size: 0.9em;
        color: #1f2937;
        font-weight: 600;
    }

    .card-actions {
        padding-top: 12px;
        border-top: 2px solid #f3f4f6;
        display: flex;
        justify-content: center;
        margin-top: 8px;
    }

    .empty-state {
        text-align: center;
        padding: 80px 20px;
        background: white;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.06);
    }

    .empty-icon {
        font-size: 4em;
        margin-bottom: 16px;
    }

    .empty-state h3 {
        font-size: 1.8em;
        color: #1a1a2e;
        margin-bottom: 8px;
        font-weight: 700;
    }

    .empty-state p {
        color: #6b7280;
        font-size: 1.1em;
        margin-bottom: 24px;
    }

    @@media (max-width: 1024px) {
        .recipe-grid {
            grid-template-columns: repeat(2, 1fr) !important;
        }
    }

    @@media (max-width: 768px) {
        .page-header h1 {
            font-size: 2em;
        }

        .recipe-grid {
            grid-template-columns: 1fr !important;
        }

        .filters-section {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-form {
            flex-direction: column;
        }

        .filter-group {
            min-width: auto;
        }

        .btn-search,
        .btn-create,
        .clear-filters {
            width: 100%;
            text-align: center;
        }
    }
</style>
